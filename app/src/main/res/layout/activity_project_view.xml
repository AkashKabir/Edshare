<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#72e1e1e1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/search_et"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="monospace"
        android:gravity="center"
        android:hint="Search Something"
        android:paddingLeft="10dp"
        android:text="Project Details"
        android:textColor="#fff"
        android:textColorHint="#ccc"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/ll_ip"
                layout="@layout/item_project" />

            <include
                android:id="@+id/ll_pdetails"
                layout="@layout/item_project_details" />

            <include layout="@layout/activity_newtv_ref" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="5dp"
                android:text="Notes"
                android:textAllCaps="true"
                android:textColor="#997601"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:fontFamily="monospace"
                android:gravity="start"
                android:minHeight="100dp"
                android:padding="10dp"
                android:text="Person should be available even during the college hours.He must give daily reports and should not use this idea to make his own project or any other stuff like that."
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="5dp"
                android:text="INVOLVED MEMBERS"
                android:textAllCaps="true"
                android:textColor="#997601"
                android:textSize="14dp" />

            <include layout="@layout/member_ref" />

            <TextView
                android:id="@+id/tv_team_Size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:text="EXPECTED TEAM SIZE"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#3f68a8ed"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img_star"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_star_yellow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:text="Star the project"
                    android:textColor="#000" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/default2" />

                <TextView
                    android:id="@+id/editText_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:text="Akash kabir"
                    android:textAllCaps="true"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/editText_cllg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:text="NIT Hamirpur"
                    android:textSize="16sp"
                    android:visibility="visible" />


                <Button
                    android:id="@+id/btn_connect"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_bkg_red"
                    android:backgroundTint="#002043"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:minHeight="35dp"
                    android:text="Connect"
                    android:textAllCaps="true"

                    android:textColor="#fff"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</LinearLayout>