<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp">


    <TextView
        android:id="@+id/message_text"
        android:padding="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/chat_send"
        android:fontFamily="monospace"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingStart="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textColor="#000000"
        android:textSize="17sp"
        android:minWidth="100dp"
        android:layout_marginBottom="3dp"/>

    <RelativeLayout
        android:layout_marginBottom="3dp"
        android:layout_below="@+id/message_text"
        android:id="@+id/rl_img_msg"
        android:background="@drawable/chat_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagemsssg"
            android:layout_width="240dp"
            android:src="@drawable/default2"
            android:layout_height="200dp"
            android:layout_margin="4dp"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <ProgressBar
            android:id="@+id/animbar"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:indeterminateTint="@android:color/black"
            android:visibility="visible" />

        <TextView
            android:padding="2dp"
            android:id="@+id/textmsgimg"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagemsssg"
            android:layout_marginBottom="6dp"
            android:fontFamily="monospace"
            android:hint="this is the msg area"
            android:paddingTop="3dp"
            android:paddingLeft="3dp"
            android:paddingBottom="2dp"
            android:textColor="#000000"
            android:textSize="17sp"
            android:visibility="visible" />

    </RelativeLayout>
</RelativeLayout>