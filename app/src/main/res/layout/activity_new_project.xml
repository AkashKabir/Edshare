<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_et"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="monospace"
            android:gravity="center"
            android:hint="Search Something"
            android:paddingLeft="10dp"
            android:text="New Project"
            android:textColor="#fff"
            android:textColorHint="#ccc"
            android:textSize="16sp"
            android:textStyle="bold" />


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Project Title"
                android:textAllCaps="true"
                android:textColor="#997601"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/tv_bkg_grey"
                android:fontFamily="monospace"
                android:gravity="start"
                android:hint="Topic title"
                android:minHeight="50dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Project Details"
                android:textAllCaps="true"
                android:textColor="#997601"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/txt_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/tv_bkg_grey"
                android:fontFamily="monospace"
                android:gravity="start"
                android:hint="Details about the project."
                android:minHeight="100dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:text="Requirements"
                android:textAllCaps="true"
                android:textColor="#997601"
                android:textSize="14dp" />

            <include
                android:id="@+id/ll_tag"
                layout="@layout/activity_newtv_tag"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_tags"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:background="@drawable/tag_bckg"
                    android:fontFamily="monospace"
                    android:hint="Enter related tags" />

                <Button
                    android:id="@+id/btn_tag"
                    android:layout_width="48dp"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="+"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:text="Requirements"
                android:textAllCaps="true"
                android:textColor="#997601"
                android:textSize="14dp" />

            <include
                android:id="@+id/ll_ref"
                layout="@layout/activity_newtv_ref"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_ref"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:background="@drawable/tag_bckg"
                    android:fontFamily="monospace"
                    android:hint="Enter references " />

                <Button
                    android:id="@+id/btn_ref"
                    android:layout_width="48dp"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="+"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="5dp"
                android:text="Notes"
                android:textAllCaps="true"
                android:textColor="#997601"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/txt_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/tv_bkg_grey"
                android:fontFamily="monospace"
                android:gravity="start"
                android:hint="Specific Notes"
                android:minHeight="100dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="5dp"
                android:text="INVOLVED MEMBERS (Involved members will be added after you accept joining requests)"
                android:textAllCaps="true"
                android:textColor="#997601"
                android:textSize="14dp" />

            <include layout="@layout/member_ref" />

            <TextView
                android:id="@+id/tv_team_Size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:text="EXPECTED TEAM SIZE"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_team_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/ref_bkg"
                android:hint="size"
                android:inputType="number"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_publish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_bkg_red"
                android:fontFamily="monospace"
                android:gravity="center"
                android:minHeight="35dp"
                android:text="Publish"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>