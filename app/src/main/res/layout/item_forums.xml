<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#24cccccc"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="3dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#77e0e0e0"
                    android:fontFamily="monospace"
                    android:padding="3dp"
                    android:text="Big data framework for Ecosystem enterprise systems using process mining tools."
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <include layout="@layout/activity_newtv_tag" />

            <TextView
                android:id="@+id/margin"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/img_user"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/img_user"
                android:background="#dedede"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="#ccc" />

            <LinearLayout
                android:id="@+id/ll_action"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/ll_upvotes"
                    android:padding="3dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_upvotes"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_thumb_blue"/>
                    <TextView
                        android:id="@+id/tv_upvotes"
                        android:paddingLeft="5dp"
                        android:textSize="16dp"
                        android:text="123456"
                        android:fontFamily="monospace"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_stars"
                    android:padding="3dp"

                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_stars"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_star_yellow"/>

                    <TextView
                        android:id="@+id/tv_stars"
                        android:paddingLeft="5dp"
                        android:textSize="16dp"
                        android:text="123456"
                        android:fontFamily="monospace"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>