<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What Do you want to ask"
            android:textAllCaps="true"
            android:textColor="#997601"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/tv_bkg_grey"
            android:fontFamily="monospace"
            android:gravity="start"
            android:minHeight="50dp"
            android:text="Big data framework for Ecosystem enterprise systems using process mining tools."
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Put some details"
            android:textAllCaps="true"
            android:textColor="#997601"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/txt_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/tv_bkg_grey"
            android:fontFamily="monospace"
            android:gravity="start"
            android:minHeight="100dp"
            android:text="Big data framework for Ecosystem enterprise systems using process mining tools."
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:text="what it's related to"
            android:textAllCaps="true"
            android:textColor="#997601"
            android:textSize="14dp" />

        <include
            layout="@layout/activity_newtv_tag"
            android:id="@+id/ll_tag"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txt_tags"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@drawable/tag_bckg"
                android:fontFamily="monospace"
                android:hint="Enter related tags" />

            <Button
                android:id="@+id/btn_tag"
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:background="@null"
                android:minHeight="30dp"
                android:text="+"
                android:gravity="center"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:text="References"
            android:textAllCaps="true"
            android:textColor="#997601"
            android:textSize="14dp" />

        <include
            android:id="@+id/ll_ref"
            layout="@layout/activity_newtv_ref"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txt_ref"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@drawable/tag_bckg"
                android:fontFamily="monospace"
                android:hint="Enter references " />

            <Button
                android:id="@+id/btn_ref"
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:background="@null"
                android:gravity="center"
                android:minHeight="30dp"
                android:text="+"
                android:textSize="20sp" />
        </LinearLayout>
        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/btn_publish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bkg_red"
            android:fontFamily="monospace"
            android:gravity="center"
            android:minHeight="35dp"
            android:text="Publish"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>
</ScrollView>