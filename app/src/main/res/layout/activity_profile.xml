<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_et"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="monospace"
            android:gravity="center"
            android:hint="Search Something"
            android:paddingLeft="10dp"
            android:text="Profile"
            android:textColor="#fff"
            android:textColorHint="#ccc"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2E3D48"
            android:layout_marginTop="3dp"
            android:orientation="vertical"
            android:padding="10dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/default2" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:hint="username"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textColorHint="#ccc"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:hint="organization"
                android:textColorHint="#ccc"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_add"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_oval_shape"
                    android:gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/add_white_24x24"
                    android:textColor="#fff"
                    android:textSize="45dp" />

                <ImageView
                    android:id="@+id/img_msg"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_oval_shape"
                    android:gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/ic_chat_24" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/placeholder_profile"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:text="About"
                android:textAllCaps="true"
                android:textColor="#997601"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:fontFamily="monospace"
                android:gravity="start"
                android:minHeight="100dp"
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:text="INTERESTS"
                android:textAllCaps="true"
                android:textColor="#997601"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_interests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:fontFamily="monospace"
                android:gravity="start"
                android:minHeight="100dp"
                android:textColor="#000"
                android:textSize="18dp" />

            <Button
                android:id="@+id/upload_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ccc"
                android:minHeight="35sp"
                android:text="Update Profile"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="16sp"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:text="PROJECTS INVOLVED"
                android:textAllCaps="true"
                android:textColor="#997601"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_nothing"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:textColor="#000"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="No Involved ib any projects yet"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_projects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="350dp" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>